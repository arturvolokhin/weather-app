{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "es6": true
    },

    "plugins": [
        "prettier"
    ],

    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended",
        "prettier"
    ],

    "parserOptions": {
        "ecmaVersion": 12
    },

    "rules": {
        "import/prefer-default-export": "off",
        "no-plusplus": "off",
        "no-alert": "off",
        "no-debugger": "off",
        "no-console": "off",
        "import/extensions": "off"
    }
}
